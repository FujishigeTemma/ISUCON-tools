Host bastion
    Hostname bastion.isucon.local
    Port <port>
    User <username>

Host s1
    Hostname s1.isucon.local
    User isucon
    LocalForward 9000 localhost:9000   # pprotein
Host s2
    Hostname s2.isucon.local
    User isucon
Host s3
    Hostname s3.isucon.local
    User isucon
Host bench
    Hostname bench.isucon.local
    User ubuntu

Match User isucon
    IdentityFile ~/.ssh/id_ed25519
    IdentitiesOnly yes
    StrictHostKeyChecking no
    ProxyCommand sh -c "ssh -W $(/bin/cat /etc/hosts | grep %h | awk '{print $1}'):%p bastion"

Host *
    TCPKeepAlive yes
    ServerAliveInterval 60

# Host ホスト名
#     ProxyJump    踏み台のホスト名
#     HostName     ドメイン/IPアドレス
#     User         ユーザー名
#     Port         ポート番号
#     LocalForward local:port:remote:port